*******************************************************************************/
#include <stdio.h>
#include <locale.h>


int main()
{
    setlocale(LC_ALL,"Portuguese");
    
    int n1, n2, n3, maior, pos;
    
    printf("Digite o primeiro número: ");
    scanf("%d", &n1);
    maior = n1;
    pos = 1;
    printf("Digite o segundo número: ");
    scanf("%d", &n2);
    if (n2 > maior) {
        maior = n2;
        pos = 2;
    }
    printf("Digite o terceiro número: ");
    scanf("%d", &n3);
    if (n3 > maior) {
        maior = n3;
        pos = 3;
    }
    
    printf("O número %d é o maior e está na posição %d", maior, pos);
    
    

    return 0;
}
